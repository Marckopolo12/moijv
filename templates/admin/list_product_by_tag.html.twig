{% extends "base.html.twig" %}

{% block title %}Liste des produits associés au tag #{{ tag.name}}{% endblock %}

{% block body %}

    <h1>Liste des produiits</h1>



    <ul>
        {% for product in products %}
            <li>
                {{ product.name}}
                {% for tag in product.tags %}
                    <a href="{{path('list_product_by_tag', {'name' : tag.name })}}">#{{ tag.name }}</a>
                {% endfor %}
            </li>
        {% endfor %}
    </ul>

    <a href="{{path('list_product')}}">Retour à la liste des produits</a>

{% endblock body %}{# empty Twig template #}
